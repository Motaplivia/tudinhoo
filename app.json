{
  "expo": {
    "name": "Tudinhoo",
    "slug": "tudinhoo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tudinhoo.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo precisa acessar sua câmera para tirar fotos de perfil.",
        "NSPhotoLibraryUsageDescription": "Este aplicativo precisa acessar sua galeria para selecionar fotos de perfil.",
        "NSUserNotificationUsageDescription": "Este aplicativo precisa enviar notificações para lembrar você sobre suas tarefas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tudinhoo.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#D96281",
          "sounds": ["./assets/notification-sound.wav"]
        }
      ]
    ]
  }
}
